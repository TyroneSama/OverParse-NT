<Window x:Class="OverParse_NT.Client.InstallLocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverParse_NT.Client"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        Title="InstallLocationDialog" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2">Please select your PSO2 install directory (pso2_bin)</Label>
        <TextBox x:Name="SelectField"  Grid.Row="1" TextChanged="SelectField_TextChanged" />
        <Button x:Name="SelectButton" Grid.Row="1" Grid.Column="1" Content="Select" Click="SelectButton_Click" />
    </Grid>
</Window>
